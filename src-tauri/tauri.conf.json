
{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "rwr-server-ping",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APP/*",
          "$DATA/*",
          "$CONFIG/*",
          "$CACHE/*",
          "$LOG/*",
          "media/*"
        ]
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": ".*"
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "http": {
        "all": true,
        "scope": ["http://rwr.runningwithrifles.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.rwr.sp",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "RWR 服务器状态检测",
        "width": 800,
        "height": 600
      }
    ]
  }
}
